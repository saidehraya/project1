<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <EditText
        android:id="@+id/etCarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car ID"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnFetchCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fetch Car Details"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etCarName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car Name"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etCarModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car Model"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etCarYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car Year"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnUpdateCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Car"
        android:layout_marginTop="16dp" />
</LinearLayout>
